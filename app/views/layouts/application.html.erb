<!DOCTYPE html>
<html>
  <head>
    
    <title>NickMakes</title>
    <%= favicon_link_tag asset_path 'made_by_nick_light_icon.png' %>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text&family=Montserrat:wght@500&family=Rowdies:wght@700&display=swap" rel="stylesheet">
  
  </head>

  <body>
    <div class="mast-containter">
      <div class="big-mast">
        <%= link_to "Nick Smith", root_path, class: "header-link" %>
      </div>
      <div class="small-mast">
        <% if yield(:title).empty? %>
            
          <% else %>
            > <%= yield(:title) %>
          <% end %>
      </div>
    </div>

    <% if false %>

    <table class='mast'><tr>
      <td class="mast-big">
        <%= link_to "Nick Smith", root_path, class: "header-link" %>
      </td>
      <td class="mast-small">
          <% if yield(:title).empty? %>
            
          <% else %>
            > <%= yield(:title) %>
          <% end %>
      </td>
    </tr></table>
    
    <% end %>
    
    <%= yield %>
  </body>
</html>

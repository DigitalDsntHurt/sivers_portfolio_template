<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<h2><%= @project.title %></h2>

<table class="detail-table">
  <thead>
    <% unless @project.role.empty? %>
      <th scope="col">role</th>
    <% end -%>
    <% unless @project.organization.empty? %>
      <th scope="col">organization</th>
    <% end -%>
    <% unless @project.industry.empty? %>  
      <th scope="col">industry</th>
    <% end -%>
    <% unless @project.project_type.empty? %>
      <th scope="col">project type</th>
    <% end -%>
    <% unless @project.skills.empty? %>
      <th scope="col">skills</th>
    <% end -%>  
    <% unless @project.technologies.empty? %>
      <th scope="col">technologies</th>
    <% end -%>
  </thead>
  <tr>
    <% unless @project.role.empty? %>
      <td data-label="role">
        <%= @project.role %>
      </td>
    <% end -%>  
    <% unless @project.organization.empty? %>
      <td data-label="organization">
        <%= @project.organization %>
      </td>
    <% end -%>
    <% unless @project.industry.empty? %>  
      <td data-label="industry">
        <%= @project.industry %>
      </td>
    <% end -%>
    <% unless @project.project_type.empty? %>  
      <td data-label="project type">
        <%= @project.project_type %>
      </td>
    <% end -%>
    <% unless @project.skills.empty? %>
      <td data-label="skills">
        <%= @project.skills %>
      </td>
    <% end -%>
    <% unless @project.technologies.empty? %>
      <td data-label="technologies">
        <%= @project.technologies %>
      </td>
    <% end -%>
  </tr>
</table>



<% unless @project.summary.empty? %>
<p>
  <strong>Summary</strong>
  <%= @project.summary %>
</p>
<% end -%>

<% unless @project.organization_context.empty? %>
